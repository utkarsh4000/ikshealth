@model MyMovieApp.Entity.MovieModel
@{
    ViewData["Title"] = "DeleteMovie";
}
<a asp-action="ShowMovieDetails" asp-controller="Movie">Movie Details</a>
<h1>DeleteMovie</h1>

<form method="post">
    <div class="form-group">
        <label>MovieTitle</label>
        <input type="text" class="form-control" asp-for="MovieTitle" />
    </div>
    <div class="form-group">
        <label>MovieDescription</label>
        <input type="text" class="form-control" asp-for="MovieDescription" />
    </div>
    <div class="form-group">
        <label>MovieType</label>
        <input type="text" class="form-control" asp-for="MovieType" />
    </div>
    <div class="form-group">
        <label>MovieLanguage</label>
        <input type="text" class="form-control" asp-for="MovieLanguage" />
    </div>

    <button type="submit" value="DeleteMovie" class="btn btn-primary">Delete</button>
    <button type="button" value="Reset" class="btn btn-secondary">Reset</button>

</form>
<hr />
@if (ViewBag.status == "Ok")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>
}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}

